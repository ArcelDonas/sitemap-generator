{
  "name": "sitemap-generator",
  "version": "8.0.0",
  "description": "Easily create XML sitemaps for your website.",
  "homepage": "https://github.com/lgraubner/sitemap-generator",
  "author": "Lars Graubner <mail@larsgraubner.de> (https://larsgraubner.com)",
  "keywords": [
    "sitemap",
    "xml",
    "sitemap.xml",
    "generator",
    "crawler",
    "seo",
    "google",
    "ecosystem:node"
  ],
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgraubner/sitemap-generator.git"
  },
  "bugs": {
    "url": "https://github.com/lgraubner/sitemap-generator/issues"
  },
  "dependencies": {
    "async": "2.6.0",
    "cheerio": "1.0.0-rc.2",
    "cp-file": "5.0.0",
    "crypto-random-string": "1.0.0",
    "lodash": "4.17.5",
    "mitt": "1.1.3",
    "normalize-url": "2.0.1",
    "simplecrawler": "1.1.6",
    "url-parse": "1.2.0"
  },
  "engines": {
    "node": ">=6"
  },
  "license": "MIT",
  "files": [
    "src",
    "!**/__tests__"
  ],
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "eslint": "4.18.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.6.1",
    "husky": "0.14.3",
    "jest": "22.3.0",
    "lint-staged": "6.1.1",
    "prettier": "1.10.2"
  },
  "scripts": {
    "lint": "eslint src",
    "precommit": "lint-staged",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "flow": "flow",
    "format": "prettier --write '**/*.js'"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --single-quote --trailing-comma es5 --write",
      "git add"
    ]
  }
}
